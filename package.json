{
	"name": "github-actions-toolkit-project",
	"version": "1.0.0",
	"description": "GitHub Actions TypeScript toolkit project",
	"main": "lib/main.js",
	"scripts": {
		"build": "tsc",
		"format": "prettier --write \"**/*.{ts,js,json,yml,yaml,md}\"",
		"format:check": "prettier --check \"**/*.{ts,js,json,yml,yaml,md}\"",
		"lint": "eslint src/**/*.ts",
		"lint:fix": "eslint src/**/*.ts --fix",
		"lint:staged": "lint-staged",
		"package": "ncc build --source-map --license licenses.txt",
		"test": "jest",
		"all": "npm run build && npm run format && npm run lint && npm run package && npm test"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/username/repo.git"
	},
	"keywords": [
		"actions",
		"node",
		"setup"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@actions/core": "^1.11.1",
		"@actions/exec": "^1.1.1",
		"@actions/github": "^6.0.0",
		"@actions/io": "^1.1.3"
	},
	"devDependencies": {
		"@types/jest": "^29.5.12",
		"@types/node": "^20.11.24",
		"@typescript-eslint/eslint-plugin": "^7.1.1",
		"@typescript-eslint/parser": "^7.1.1",
		"@vercel/ncc": "^0.38.1",
		"eslint": "^8.57.0",
		"eslint-plugin-github": "^4.10.2",
		"eslint-plugin-jest": "^27.9.0",
		"eslint-plugin-jsonc": "^2.13.0",
		"eslint-plugin-prettier": "^5.1.3",
		"jest": "^29.7.0",
		"lint-staged": "^15.2.2",
		"prettier": "^3.2.5",
		"ts-jest": "^29.1.2",
		"typescript": "^5.3.3"
	},
	"lint-staged": {
		"*.{ts,js}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,yml,yaml,md}": [
			"prettier --write"
		]
	}
}
